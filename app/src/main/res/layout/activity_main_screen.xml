<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_inicio"
    android:padding="24dp">

    <!-- Logo del Club -->

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:backgroundTint="#00FFFFFF"
        app:srcCompat="@drawable/ic_arrow_back" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/logo_club"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/logo_club" />

    <!-- Título del Club -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLUB DEPORTIVO\nIFTS 29"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="48dp" />

    <!-- Botón 1: Clientes -->
    <Button
        style="@style/BlueButton"
        android:id="@+id/btnClientes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="CLIENTES"
        android:background="@drawable/rounded_button"
        android:textColor="#FFFFFF" />

    <!-- Botón 2: Cuota y pagos -->
    <Button
        style="@style/BlueButton"
        android:id="@+id/btnCuotaYPagos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="CUOTA Y PAGOS"
        android:background="@drawable/rounded_button"
        android:textColor="#FFFFFF" />

    <!-- Botón 3: Actividades y rutinas -->
    <Button
        style="@style/BlueButton"
        android:id="@+id/btnActividadesYRutinas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="ACTIVIDADES Y RUTINAS"
        android:background="@drawable/rounded_button"
        android:textColor="#FFFFFF" />

</LinearLayout>
