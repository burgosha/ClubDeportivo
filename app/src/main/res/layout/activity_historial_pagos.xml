<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_clientes_header">

    <!-- Header azul -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@android:color/transparent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="@string/volver" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/historial_pagos_titulo"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-black" />
    </LinearLayout>

    <!-- Contenedor blanco principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_contenedor_blanco_arriba_redondeado"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="-16dp">

        <!-- Barra de búsqueda y botón filtro -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">
            <EditText
                android:id="@+id/etBuscarCliente"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="@string/historial_pagos_buscar_hint"
                android:background="#E6E6E6"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/black"
                android:textColorHint="#888888"
                android:inputType="text"
                android:layout_marginEnd="8dp" />
            <ImageButton
                android:id="@+id/btnFiltrar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:src="@drawable/btn_filtrar"
                android:contentDescription="@string/historial_pagos_filtrar"
                android:scaleType="centerInside" />
        </LinearLayout>

        <!-- Lista de historial con scroll -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- Card de historial ejemplo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#E6E6F6"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:clipToOutline="true"
                    android:backgroundTintMode="src_in"
                    android:backgroundTint="#E6E6F6"
                    android:elevation="2dp"
                    android:radius="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/historial_pagos_fecha"
                        android:textColor="#888888"
                        android:textSize="13sp"
                        android:layout_marginBottom="2dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/historial_pagos_nombre"
                                android:textStyle="bold"
                                android:textColor="#111111"
                                android:textSize="16sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/historial_pagos_socio"
                                android:textColor="#444444"
                                android:textSize="14sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/historial_pagos_concepto"
                                android:textColor="#444444"
                                android:textSize="14sp" />
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/historial_pagos_monto"
                            android:textColor="#111111"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:gravity="end" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#E6E6F6"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:clipToOutline="true"
                    android:backgroundTintMode="src_in"
                    android:backgroundTint="#E6E6F6"
                    android:elevation="2dp"
                    android:radius="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/historial_pagos_fecha"
                        android:textColor="#888888"
                        android:textSize="13sp"
                        android:layout_marginBottom="2dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/historial_pagos_nombre"
                                android:textStyle="bold"
                                android:textColor="#111111"
                                android:textSize="16sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/historial_pagos_socio"
                                android:textColor="#444444"
                                android:textSize="14sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/historial_pagos_concepto"
                                android:textColor="#444444"
                                android:textSize="14sp" />
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/historial_pagos_monto"
                            android:textColor="#111111"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:gravity="end" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#E6E6F6"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:clipToOutline="true"
                    android:backgroundTintMode="src_in"
                    android:backgroundTint="#E6E6F6"
                    android:elevation="2dp"
                    android:radius="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/historial_pagos_fecha"
                        android:textColor="#888888"
                        android:textSize="13sp"
                        android:layout_marginBottom="2dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/historial_pagos_nombre"
                                android:textStyle="bold"
                                android:textColor="#111111"
                                android:textSize="16sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/historial_pagos_socio"
                                android:textColor="#444444"
                                android:textSize="14sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/historial_pagos_concepto"
                                android:textColor="#444444"
                                android:textSize="14sp" />
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/historial_pagos_monto"
                            android:textColor="#111111"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:gravity="end" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#E6E6F6"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:clipToOutline="true"
                    android:backgroundTintMode="src_in"
                    android:backgroundTint="#E6E6F6"
                    android:elevation="2dp"
                    android:radius="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/historial_pagos_fecha"
                        android:textColor="#888888"
                        android:textSize="13sp"
                        android:layout_marginBottom="2dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/historial_pagos_nombre"
                                android:textStyle="bold"
                                android:textColor="#111111"
                                android:textSize="16sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/historial_pagos_socio"
                                android:textColor="#444444"
                                android:textSize="14sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/historial_pagos_concepto"
                                android:textColor="#444444"
                                android:textSize="14sp" />
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/historial_pagos_monto"
                            android:textColor="#111111"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:gravity="end" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout> 